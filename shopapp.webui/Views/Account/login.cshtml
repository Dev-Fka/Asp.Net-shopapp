@model LoginModel

<h1 class="h3">GİRİŞ YAPINIZ!
</h1>
<hr>

<form asp-controller="account" asp-action="login" method="post">
    <div class="form-group row">
        <input type="hidden" name="returnUrl" value="@Model?.returnUrl">
        <label for="col-sm-2 col-form-label" asp-for="userName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="userName">
            <span asp-validation-for="userName" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="passWord"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="passWord">
        </div>
    </div>
    <div class="form-group row mt-3 ">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-danger btn-lg" value="Save Product">LOGIN</button>
            <a class="btn btn-info float-end" asp-controller="account" asp-action="forgetPassword">ŞİFREMİ UNUTTUM</a>
        </div>
    </div>
</form>
