@model ResetModel

<h1>ŞİFRE SIFIRLAMA SAYFASI</h1>

<form asp-controller="account" asp-action="resetPassword" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="token">
        <label for="col-sm-2 col-form-label" asp-for="eMail"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="eMail">
            <span asp-validation-for="eMail" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="password"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="password">
        </div>
    </div>
    <div class="form-group row mt-3 ">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-danger btn-lg" value="Save Product">SAVE</button>
        </div>
    </div>
</form>