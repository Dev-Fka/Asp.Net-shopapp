@model RegisterModel

<h1 class="h3">KAYIT OL!
</h1>
<hr>

<form asp-controller="account" asp-action="register" method="post">
    <div class="form-group row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label for="col-sm-2 col-form-label" asp-for="firstName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="firstName">
            <span asp-validation-for="firstName" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="lastName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="lastName">
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="userName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="userName"></input>
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="password"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="password">
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="rePassword"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="rePassword">
            <span asp-validation-for="rePassword" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="col-sm-2 col-form-label" asp-for="email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="email">
        </div>
    </div>
    <div class="form-group row mt-3 ">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-danger btn-lg" value="Save Product">Register</button>
        </div>
    </div>
</form>

@section script{
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}