@model ProductModel

<h1 class="h3">EDÄ°T PRODUCT</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="admin" asp-action="editProduct" method="post">
            <div class="form-group row">
                <input type="hidden" name="ProductId" value="@Model.ProductId">
                <label for="col-sm-2 col-form-label" asp-for="Name"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="col-sm-2 col-form-label" asp-for="Url"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                </div>
            </div>
            <div class="form-group row">
                <label for="col-sm-2 col-form-label" asp-for="Description"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="col-sm-2 col-form-label" asp-for="ImageUrl"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                </div>
            </div>
            <div class="form-group row">
                <label for="col-sm-2 col-form-label" asp-for="Price"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="form-group row mt-3 ">
                <div class="col-sm-10">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg" value="Save Product">ADD</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @foreach (var item in (List<Category>)ViewBag.Categories)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="category_@(item.CategoryId)"
                @(Model.selectedCategories.Any(i => i.CategoryId==item.CategoryId)?"checked":"")>
                <label class="form-check-label" for="category_@(item.CategoryId)">
                    @item.Name
                </label>
            </div>
        }
    </div>
</div>
