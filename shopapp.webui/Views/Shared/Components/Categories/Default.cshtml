@model List<Category>

<div class="list-group">
    <a asp-action="list" asp-controller="Shop" class="list-group-item list-group-item-action">TÜM
        KATEGORİLER</a>
    @foreach (var category in Model)
    {
        <a asp-controller="Shop" asp-action="list" asp-route-category="@category.Name"
        class="list-group-item list-group-item-action">
            @category.Name
        </a>
    }
</div>